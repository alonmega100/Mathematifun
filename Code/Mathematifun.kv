WindowManager:
    LoginScreen:
    SignupScreen:
    MainScreen:
    SendMessageScreen:
    WhiteboardScreen:

# TODO: change the order
<MainScreen>:
    name: "main"
    GridLayout:
        size: self.size
        pos: self.pos
        row: 2
        cols: 2
        Label:
            size: self.texture_size
            text: "Main Screen"
        Button:
            id: message_button
            text: "Send Message"
            on_press:
                root.manager.transition.direction = "left"
                app.root.current = "message"

        Button:
            id: white_board_button
            text: "White Board"
            on_press:
                root.manager.transition.direction = "left"
                app.root.current = "whiteboard"
        Label:
            size: self.texture_size
            text: "Messages you got:"



<LoginScreen>:
    username_text_input: username_text_input
    password_text_input: password_text_input

    login_button: login_button
    name: "login"

    GridLayout:
        size: self.size
        pos: self.pos
        row: 2
        cols: 2
        Label:
            size: self.texture_size
            text: "Login Screen"
        GridLayout:
            size: self.size
            pos: self.pos
            row: 2
            cols: 1
            TextInput:
                id: username_text_input
                text: "a"#"Enter your username here"
                #TODO: CHANGE THE TEXT
            TextInput:
                id: password_text_input
                text: "b"#"Enter your password here"
        Button:
            id: login_button
            text: "Connect"
            on_press:
                root.login()

        Button:
            id: signup_button
            text: "Sing Up"
            on_press:
                root.manager.transition.direction = "left"
                app.root.current = "signup"

<SignupScreen>:
    name: "signup"
    GridLayout:
        size: self.size
        pos: self.pos
        row: 2
        cols: 1
        CheckBox:
            id: is_teacher_checkbox
        Button:
            id: signup_button
            text: "Sing Up"
            on_press:
                root.manager.transition.direction = "left"
                app.root.current = "main"

<SendMessageScreen>:
    name: "message"
    destination_user_textbox: destination_user_textbox
    message_textbox: message_textbox

    GridLayout:
        size: self.size
        pos: self.pos
        row: 3
        cols: 2
        Label:
            size: self.texture_size
            text: "Destination"
        TextInput:
            id: destination_user_textbox
            text: "Type the destination's username"
        Label:
            size: self.texture_size
            text: "Send Message"
        TextInput:
            id: message_textbox
            text: "Type the message you want to send"
        Button:
            text: "Main Menu"
            on_press:
                root.manager.transition.direction = "right"
                app.root.current = "main"
        Button:
            size: self.texture_size
            text: "Send Message"
            on_press:
                root.send_message()


<WhiteboardScreen>:
    whiteboard: whiteboard
    name: "whiteboard"

    GridLayout:
        size: self.size
        pos: self.pos
        row: 3
        cols: 1
        Label:
            size: self.texture_size
            text: "WhiteBoard"
        Button:
            text: "Main Menu"
            on_press:
                root.manager.transition.direction = "right"
                app.root.current = "main"
        Whiteboard:
            id: whiteboard

<Whiteboard>:

    settings: settings
    board: board

    GridLayout:
        size: root.size
        pos: root.pos
        cols: 1
        rows: 2

        BoardSettings:
            id: settings
            on_line_color: root.board.line_color = self.line_color
            on_line_width: root.board.line_width = self.line_width

        Board:
            id: board

<BoardSettings>:
    clear_button: clear_button
    rows: 1
    cols: 6

    Button:
        id: clear_button
        text: "Clear"

    Spinner:
        text: "Red"
        values: root.colors.keys()
        on_text:
            root.set_line_color(self.text)

    Spinner:
        text: "Normal"
        values: root.widths.keys()
        on_text:
            root.set_line_width(self.text)
