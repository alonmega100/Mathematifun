WindowManager:
    ServerFinderScreen:
    LoginScreen:
    SignupScreen:
    MainScreen:
    SendMessageScreen:
    WhiteboardScreen:
    JoinRoomScreen:
    RoomScreen:
    
<ServerFinderScreen>:
    error_label: error_label
    name: "server finder"
    
    GridLayout:
        size: self.size
        pos: self.pos
        rows: 3
        cols: 2
        padding:
            ((self.width / self.cols) * 0.25,
            (self.height / self.rows) * 0.2)
        spacing: (self.height / self.rows) * 0.2

        Label:
            text: "Server IP:"
        TextInput:
            id: ip_text_input
            text: "127.0.0.1"
        Label:
            text: "Server port:"
        TextInput:
            id: port_text_input
            #hint_text: "Port"
            text: "4261"

        Button:
            text: "Login"
            on_press:
                root._choose_server(ip_text_input.text, port_text_input.text)
        Label:
            id: error_label
            text: ""

# TODO: change the order
<MainScreen>:
    messages_label: messages_label
    name: "main"
    GridLayout:
        size: self.size
        pos: self.pos
        row: 3 # TODO: IT WAS 4 for the whiteboard screen
        cols: 1
        Label:
            size: self.texture_size
            text: "Main Screen"
        GridLayout:
            size: self.size
            pos: self.pos
            row: 1
            cols: 2
            Button:
                id: message_button
                text: "Send Message"
                on_press:
                    root.manager.transition.direction = "left"
                    app.root.current = "message"
            ScrollView:
                do_scroll_y: True
                Label:
                    id: messages_label
                    size_hint_y: None
                    height: self.texture_size[1]
                    text: "Messages you got:"

        GridLayout:
                #TODO
            size: self.size
            pos: self.pos
            cols: 2
            Button:
                id: create_room_button
                text: "Create a room"
                on_press:
                    root.create_room()
                    root.manager.transition.direction = "left"
                    app.root.current = "room"

            Button:
                id: join_room_button
                text: "Join room"
                on_press:
                    root.manager.transition.direction = "left"
                    app.root.current = "join_room"

<JoinRoomScreen>:
    room_id_text_input: room_id_text_input
    name: "join_room"
    GridLayout:
        size: self.size
        pos: self.pos
        rows:3
        cols:1
        Label:
            size: self.texture_size
            text: "Join a Room"
        GridLayout:
            cols:2
            TextInput:
                id: room_id_text_input
                hint_text: "Enter the room ID"
            Label:
                size: self.texture_size
                text: "press join the room"
        GridLayout:
            cols:2
            Button:
                text: "join the room"
                on_press:
                    root.join_room()
                    root.manager.transition.direction = "left"
                    app.root.current = "room"


            Button:
                id: join_room_button
                text: "Back"
                on_press:
                    root.manager.transition.direction = "right"
                    app.root.current = "main"


<RoomScreen>:
    name: "room"
    whiteboard: whiteboard
    chat: chat
    Label:
        text: "Room ID: " + app.room_id
        pos_hint: {"top": 1}
        size_hint: 0.3, 0.2
    Chat:
        id: chat

        pos_hint: {"top": 0.8}
        size_hint: 0.3, 0.6
    Button:
        text: "Main Menu"
        pos: 0, 0
        size_hint: 0.3, 0.2
        on_press:
            root.leave_room()
            root.manager.transition.direction = "left"
            app.root.current = "main"

    Whiteboard:
        id: whiteboard
        pos: 0.3 * root.width , 0
        size_hint: 0.7, 1


<LoginScreen>:
    username_text_input: username_text_input
    password_text_input: password_text_input

    login_button: login_button
    login_status_textbox: login_status_textbox
    name: "login"

    GridLayout:
        size: self.size
        pos: self.pos
        row: 4
        cols: 1
        Label:
            size: self.texture_size
            text: "Login Screen"
        GridLayout:
            size: self.size
            pos: self.pos
            row: 1
            cols: 2
            TextInput:
                id: username_text_input
                hint_text: "Enter your username here"
            TextInput:
                id: password_text_input
                hint_text: "Enter your password here"
        Label:
            id: login_status_textbox
            text: "Enter you username and password, then press Connect"
        GridLayout:
            size: self.size
            pos: self.pos
            row: 1
            cols: 2
            Button:
                id: login_button
                text: "Connect"
                on_press:
                    root.login()

            Button:
                id: signup_button
                text: "Don't have an account? Sign Up"
                on_press:
                    root.manager.transition.direction = "left"
                    app.root.current = "signup"


<SignupScreen>:
    signup_button: signup_button
    username_text_input: username_text_input
    password_text_input: password_text_input
    signup_status: signup_status
    name: "signup"
    GridLayout:
        size: self.size
        pos: self.pos
        row: 4
        cols: 1
        Label:
            text: "Sign Up"
        GridLayout:
            cols: 2
            TextInput:
                id: username_text_input
                hint_text: "Enter your username here"
            TextInput:
                id: password_text_input
                hint_text: "Enter your password here"
        Label:
            id: signup_status
            text: app.signup_status

        GridLayout:
            cols: 2
            Button:
                text: "Back"
                on_press:
                    root.manager.transition.direction = "right"
                    app.root.current = "login"
            Button:
                id: signup_button
                text: "Sign Up"
                on_press:
                    root.signup()



<SendMessageScreen>:
    name: "message"
    destination_user_textbox: destination_user_textbox
    message_textbox: message_textbox
    messages_label: messages_label

    GridLayout:
        size: self.size
        pos: self.pos
        row: 3
        cols: 1
        Label:
            size: self.texture_size
            text: 'Direct Message'
            canvas.before:
                Color:
                    rgb: 0.3, 0.3, 0.3
                Rectangle:
                    size: self.size
                    pos: self.pos
        GridLayout:
            size: self.size
            pos: self.pos
            row: 1
            cols: 2
            GridLayout:
                size: self.size
                pos: self.pos
                row: 2
                cols: 1
                TextInput:
                    id: destination_user_textbox
                    hint_text: "Type the destination's username"
                TextInput:
                    id: message_textbox
                    hint_text: "Type the message you want to send"
            ScrollView:
                do_scroll_y: True
                Label:
                    id: messages_label
                    size_hint_y: None
                    height: self.texture_size[1]

                    text: "Messages you got:"

        GridLayout:
            size: self.size
            pos: self.pos
            row: 1
            cols: 2
            Button:
                text: "Main Menu"
                on_press:
                    root.manager.transition.direction = "right"
                    app.root.current = "main"
            Button:
                size: self.texture_size
                text: "Send Message"
                on_press:
                    root.send_message()


<WhiteboardScreen>:
    whiteboard: whiteboard
    name: "whiteboard"
    GridLayout:
        size: self.size
        pos: self.pos
        row: 3
        cols: 1
        Label:
            size: self.texture_size
            text: "WhiteBoard"
        Button:
            text: "Main Menu"
            on_press:
                root.manager.transition.direction = "right"
                app.root.current = "main"
        Whiteboard:
            id: whiteboard


<Whiteboard>:
    settings: settings
    board: board

    GridLayout:
        size: root.size
        pos: root.pos
        cols: 1
        rows: 2

        BoardSettings:
            id: settings
            size_hint: 1, 0.2
            on_line_color: root.board.line_color = self.line_color
            on_line_width: root.board.line_width = self.line_width

        Board:
            id: board


<BoardSettings>:
    clear_button: clear_button
    rows: 1
    cols: 6
    Button:
        id: clear_button
        text: "Clear"
    Spinner:
        text: "White"
        values: root.colors.keys()
        on_text:
            root.set_line_color(self.text)
    Spinner:
        text: "Normal"
        values: root.widths.keys()
        on_text:
            root.set_line_width(self.text)

<Chat>:
    content_text_input: content_text_input
    ScrollView:
        do_scroll_y: True
        pos_hint: {"top": 1}
        size_hint: 1, 0.8
        Label:
            size_hint: None, None
            size: self.texture_size
            text: "\n".join(app.room_messages)

    TextInput:
        id: content_text_input
        pos: 0, 0
        size_hint: 1, 0.2
        multiline: False
        on_text_validate:
            root.send_message()
            self.text = ""

<Board>:
    source: app.whiteboard_filename
    nocache: True
    allow_stretch: True
