WindowManager:
    LoginScreen:
    SignupScreen:
    MainScreen:
    SendMessageScreen:
    WhiteboardScreen:

# TODO: change the order
<MainScreen>:
    name: "main"
    GridLayout:
        size: self.size
        pos: self.pos
        row: 2
        cols: 2
        Label:
            size: self.texture_size
            text: "Main Screen"
        Button:
            id: message_button
            text: "Send Message"
            on_press:
                root.manager.transition.direction = "left"
                app.root.current = "message"

        Button:
            id: white_board_button
            text: "White Board"
            on_press:
                root.manager.transition.direction = "left"
                app.root.current = "whiteboard"
        Label:
            size: self.texture_size
            text: "Messages you got:"



<LoginScreen>:
    username_text_input: username_text_input
    password_text_input: password_text_input

    login_button: login_button
    name: "login"

    GridLayout:
        size: self.size
        pos: self.pos
        row: 2
        cols: 2
        Label:
            size: self.texture_size
            text: "Login Screen"
        GridLayout:
            size: self.size
            pos: self.pos
            row: 2
            cols: 1
            TextInput:
                id: username_text_input
                text: "a"#"Enter your username here"
                #TODO: CHANGE THE TEXT
            TextInput:
                id: password_text_input
                text: "b"#"Enter your password here"
        Button:
            id: login_button
            text: "Connect"
            on_press:
                root.on_login_button_press()

        Button:
            id: signup_button
            text: "Sing Up"
            on_press:
                root.manager.transition.direction = "left"
                app.root.current = "signup"

<SignupScreen>:
    name: "signup"
    GridLayout:
        size: self.size
        pos: self.pos
        row: 2
        cols: 1
        Button:
            id: signup_button
            text: "Sing Up"
            on_press:
                root.manager.transition.direction = "left"
                app.root.current = "main"

<SendMessageScreen>:
    name: "message"
    GridLayout:
        size: self.size
        pos: self.pos
        row: 2
        cols: 2
        Label:
            size: self.texture_size
            text: "Send Message"
        TextInput:
            text: "Type the message you want to send"
        Button:
            text: "Main Menu"
            on_press:
                root.manager.transition.direction = "right"
                app.root.current = "main"
        Label:
            size: self.texture_size
            text: "Send Message"


<WhiteBoardScreen>:

    name: "whiteboard"

    GridLayout:
        size: self.size
        pos: self.pos
        row: 2
        cols: 1
        Label:
            size: self.texture_size
            text: "WhiteBoard"
        Button:
            text: "Main Menu"
            on_press:
                root.manager.transition.direction = "right"
                app.root.current = "main"
